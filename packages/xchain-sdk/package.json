{
    "name": "xchain-sdk",
    "version": "1.2.5",
    "author": "Peersyst",
    "description": "A JavaScript/TypeScript SDK for transferring assets across blockchains that support cross chain transactions.",
    "license": "ISC",
    "keywords": [
        "xrpl",
        "evm",
        "sidechain",
        "typescript",
        "bridge"
    ],
    "private": false,
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "postinstall": "pnpm build",
        "build": "node ./scripts/build.js",
        "test": "jest --maxWorkers=30%",
        "test:coverage": "pnpm test --coverage",
        "test:watch": "pnpm test --watch",
        "test:ci": "jest --runInBand",
        "clean": "rimraf node_modules dist"
    },
    "dependencies": {
        "@peersyst/xrp-evm-contracts": "workspace:*",
        "bignumber.js": "^9.1.2",
        "ethers": "^5.7",
        "ripple-address-codec": "^5.0.0",
        "xrpl": "3.0.0"
    },
    "devDependencies": {
        "@swisstype/essential": "^0.0.5",
        "@swisstype/string": "^0.0.4",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "eslint": "^8.57.0",
        "fs-extra": "^11.2.0",
        "jest": "29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    }
}
